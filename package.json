{
  "name": "img-compress-cli",
  "version": "1.0.0",
  "description": "CLI tool for batch image compression, resizing, and format conversion",
  "main": "dist/bin/index.js",
  "bin": {
    "img-compress": "dist/bin/index.js"
  },
  "scripts": {
    "build": "tsc && cp package.json dist/",
    "dev": "ts-node bin/index.ts",
    "start": "node dist/bin/index.js",
    "test": "jest",
    "lint": "eslint bin/**/*.ts src/**/*.ts",
    "format": "prettier --write bin/**/*.ts src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "image",
    "compression",
    "resize",
    "cli",
    "sharp",
    "webp"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^24.1.0",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "ora": "^8.2.0",
    "sharp": "^0.34.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0"
  }
}
